.article__userComments
    overflow-y scroll
    width 350px
    max-height 500px
    background $white
    position: absolute
    left 40px
    right 50px
    bottom 0px
    padding-top 4px
    border-radius 2px
    box-shadow 0 1px 10px 0 rgba(0,0,0,0.30)
    transform-origin left bottom
    transition transform 150ms ease, opacity 150ms ease, visibility 150ms ease
    will-change transform

.article__userComments--hidden
    visibility hidden
    opacity 0
    transform scale(0) translateX(100px)

.article__userComments--visible
    visibility visible
    opacity 1
    transform scale(1) translateX(0px)


.article__userCommentsAuthor
    display inline-flex
    align-items center

.article__userCommentsAuthor--avatar
    display inline-block
    width 30px
    height 30px

    border-radius 50%

    background $red

.article__userCommentsAuthor--avatarImg
    width 100%

.article__userCommentsAuthor--name
    font-size 16px
    font-family 'bebas'
    display inline-block
    padding 5px

.article__userCommentsContent
    font-size 16px
    font-family 'Signika'
    padding-bottom 5px


.article__userCommentInput
    height 30px !important
    padding-left 5px
    font-size 16px
    font-family 'Signika'
    width 100%