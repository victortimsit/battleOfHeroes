//Container of the article style
.article__text
    padding-top: 20px;
    padding-left: 100px;
    padding-right: 50px;

//Style for subtitles of the article
.article__textTitle
    display flex
    justify-content space-between
    items-align center
    font-size 22px
    font-family 'bebas'
    padding-bottom 30px
    padding-top 10px

//Style for core texts in articles
.article__textCore
    display inline-flex
    items-align center
    font-size 16px
    font-family 'signika'
    padding-bottom 10px
    padding-top 10px

//style for comment icon
.articles__commentsIcon
    width 20px
    height 20px
    margin-left 15px
    margin-right 15px

.article__commentsIconContainer
    display flex
    position relative
    align-items center

.article__commentsIconContainer--top
    float right