.timeline__hover
    display inline-block
    width 100%
    padding-left 10px
    padding-right 10px
    transform scaleY(0)

    background #fff

    text-align center
    transition transform 150ms ease

.timeline__hover--bottom
    transform translateY(-154px)

.timeline__hover--top
    transform translateY(-4px)

.timeline__hoverButton--red
    width 130px
    float right
    display block
    background-color $red
    margin-top 10px
    margin-bottom 10px
    font-family bebas
    font-size 15px
    word-spacing 2px
    font-weight bold
    text-align center
    color $white
    padding 20px
    cursor pointer
    // box-shadow: 0px 8px 20px rgba(237, 27, 42, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease, fill 0.3s ease;
    &:hover 
        box-shadow 0px 15px 15px 4px rgba(0, 0, 0, 0.1)
        transform translateY(-7px)
    &:active
        margin-bottom 0px
        background-color $white
        border solid 1px $red
        color $red

        border none

        transform translateY(0px)
        box-shadow 0px 8px 20px rgba(57, 151, 214, 0.1)

.timeline__hoverButton--white
    width 130px
    float right
    display block
    margin-top 10px
    margin-bottom 10px
    font-family bebas
    font-weight bold
    text-align center
    color $greyfont
    padding 20px
    border solid 1px $greyfont
    cursor pointer
    // box-shadow: 0px 8px 20px rgba(237, 27, 42, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease, fill 0.3s ease;
    &:hover 
        background-color #FFFFFF
        border solid 1px $red

        color $red

        box-shadow 0px 15px 15px 4px rgba(0, 0, 0, 0.1)
        transform translateY(-7px)
    &:active
        margin-bottom 0px
        background-color $red
        color #FFFFFF

        border none

        transform translateY(0px)
        box-shadow 0px 8px 20px rgba(57, 151, 214, 0.1)

