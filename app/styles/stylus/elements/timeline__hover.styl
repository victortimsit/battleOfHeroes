.timeline__poster--bottom:hover .timeline__hover--bottom
    transform translateY(0px)

.timeline__poster--bottom:hover .timeline__year
    opacity 0

.timeline__poster--top:hover .timeline__year
    opacity 0

.timeline__poster--top:hover .timeline__hover--top
    transform translateY(-160px)

.timeline__poster:hover
    transform translateX(-50%) scale(1.1)
    box-shadow 0px 8px 20px rgba(57, 151, 214, 0.1)